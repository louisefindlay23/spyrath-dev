---
import { Image } from "astro:assets";
import * as prismic from "@prismicio/client";
const { slice } = Astro.props;
---
<section>
  <Fragment set:html={prismic.asHTML(slice.primary.heading1)} />
    <!-- <Fragment set:html={prismic.asHTML(slice.primary.subheading)}/> -->
  <Fragment set:html={prismic.asHTML(slice.primary.text)}/>
  <div class="content">
  {slice.items.map((item) => {
    return (
    <div>
      <Fragment set:html={prismic.asHTML(item.section_heading)} />
      <Fragment set:html={prismic.asHTML(item.section_text)} />
      <Fragment set:html={prismic.asHTML(item.section_text_2)} />
    </div>
    )
  })}
  </div>
<!--     {slice.items.map((button) => {
      return (
        <button><a href={prismic.asLink(button.button_link)}>{prismic.asText(button.button_text)}</a></button>
      )
    })}
    <div class="buttons">
      {slice.items.map((button) => {
        return (
          <button><a href={prismic.asLink(button.button_link)}>{prismic.asText(button.button_text)}</a></button>
        )
      })}
    </div> -->
</section>

<style>
  section {
    width: 92.5%;
    display: flex;
    flex-direction: column;
    padding: 2.5% 0 2.5% 7.5%;
    background: #ffffff;
  }

  section:nth-child(even) {
    background: #f5f5f5;
  }

  h2 {
    text-align: center;
    font-weight: 700;
    color: #e17b24;
  }

  h2:first-word {
    color: #3a5c64;
  }

  h3 {
    text-align: center;
    color: #e17b24;
  }

  .content {
    display: flex;
    justify-content: space-around;
  }

  .content div {
    width: 40%;
  }

  .content div:last-of-type h3 {
    color: #3a5c64;
  }

  .image {
    width: 40%;
    margin-left: 5%;
  }

  img {
    display: block;
    width: 100%;
    height: auto;
    margin: 0 auto;
  }

  .buttons {
    margin-top: 3.5vh;
  }

  button {
    border-radius: 25px;
    border: none;
    background-image: linear-gradient(to right, #E99D23, #CB2027);
    margin-right: 2.5%;
    padding: 2.5% 7.5%;
    font-size: 0.9rem;
  }

  button a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
  }

  button a:hover {
    text-decoration: underline;
  }
</style>